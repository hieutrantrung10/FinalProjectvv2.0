@model Model.EF.User
@{
    ViewBag.Title = "PasswordReclaim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("PasswordReclaim", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()
