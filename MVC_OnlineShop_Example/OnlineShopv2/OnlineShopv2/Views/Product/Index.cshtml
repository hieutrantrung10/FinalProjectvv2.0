@using System.Security.Policy
@using PagedList
@using PagedList.Mvc
@model IEnumerable<Model.EF.Product>
@{
    ViewBag.Title = "Danh mục sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content_top">
    <div class="heading">
        <h3>Toàn bộ sản phẩm</h3>
    </div>
    
    <div class="clear"></div>
</div>
<div class="section group">
    @foreach (var item in Model)
    {
        var link = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;
        <div class="grid_1_of_4 images_1_of_4">
            <a href="@link"><img src="@item.Image" alt="@item.Name" /></a>
            <h2>@item.Name </h2>
            <div class="price-details">
                <div class="price-number">
                    <p><span class="rupees">@(item.Price.HasValue ? item.Price.Value.ToString("N0") : "Liên hệ")</span></p>
                </div>
                <div class="add-cart">
                    <h4><a href="/them-gio-hang?productId=@item.ID&quantity=1">Thêm vào giỏ</a></h4>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    }

   
